<%= simple_form_for(@application) do |f| %>
  <%= f.error_notification %>
<p>
  <strong>Company:</strong>
  <%= current_user.bprofile.name %>
</p>
<p>
   <strong>Name:</strong>
   <%= current_user.first_name %>
   <%= current_user.last_name %>
</p>
  <div class="form-inputs">
    <%= f.input :attachment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
