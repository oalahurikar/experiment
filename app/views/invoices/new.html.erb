<h1>Invoice</h1>
<h3>From:</h3>
<p>
  <strong>Name:</strong>
  <%= current_user.first_name %> <%= current_user.last_name %>
</p>
<p>
  <strong>Company:</strong>
  <%= current_user.bprofile.name %>
</p>
<%= simple_form_for(@invoice) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
